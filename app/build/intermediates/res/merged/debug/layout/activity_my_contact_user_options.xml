<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rahul.mycontacts.MyContactUserOptions"
    android:id="@+id/relativeLayout2"
    android:focusable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome,"
        android:id="@+id/textWelcome"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/emptyString"
        android:id="@+id/username"
        android:layout_alignBottom="@+id/textWelcome"
        android:layout_toEndOf="@+id/textWelcome"
        android:layout_marginStart="43dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select your option:"
        android:id="@+id/textViewOption"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/textWelcome"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Backup My contacts to my mail"
        android:id="@+id/buttonBackUp"
        android:onClick="onButtonClick"
        android:layout_below="@+id/textViewOption"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:nestedScrollingEnabled="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE MY CONTACTS"
        android:id="@+id/buttonUpdateMyContacts"
        android:layout_below="@+id/buttonBackUp"
        android:layout_alignStart="@+id/buttonBackUp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:onClick="onButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/buttonLogout"
        android:layout_below="@+id/buttonUpdateMyContacts"
        android:layout_alignStart="@+id/buttonUpdateMyContacts"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:onClick="onButtonClick" />

</RelativeLayout>
